generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SwapHistory {
  id               String   @id @default(cuid())
  walletAddress    String
  inputToken       String
  inputTokenSymbol String
  inputAmount      String
  outputToken      String
  outputTokenSymbol String
  outputAmount     String?
  sourceChain      String   @default("solana")
  destChain        String
  destChainId      Int
  provider         String
  sponsorFeePaid   String
  feeToken         String
  sponsorCostActual String?
  txHash           String?
  bridgeOrderId    String?
  status           String   @default("pending")
  errorMessage     String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([walletAddress])
  @@index([status])
  @@index([bridgeOrderId])
}
